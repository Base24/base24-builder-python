<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Synth Midnight Dark">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Synth Midnight Dark scheme by MichaÃ«l Ball (http://github.com/michael-ball/)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#DFDBDF" background="#040404"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#242424"/>
  <style name="CurrentLine" background="#61507A"/>
  <style name="LineNumber" foreground="#61507A"/>
  <style name="CurrentLineNumber" foreground="#BFBBBF" bold="true"/>
  <style name="SearchResult" background="#141414"/>
  <style name="Parentheses" background="#242424" />
  <style name="ParenthesesMismatch" background="#EA5CE2" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#FFFBFF" background="#61507A"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#61507A"/>
  <style name="Occurrences.Rename" background="#BFBBBF"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#E4600E"/>

  <!-- language primitives -->
  <style name="Number" foreground="#E4600E"/>
  <style name="String" foreground="#06EA61"/>
  <style name="Keyword" foreground="#EA5CE2"/>
  <style name="Operator" foreground="#DFDBDF"/>
  <style name="Preprocessor" foreground="#03AEFF"/>
  <style name="Label" foreground="#B53B50"/>

  <!-- types, classes -->
  <style name="Type" foreground="#DAE84D"/>
  <style name="PrimitiveType" foreground="#EA5CE2"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#03AEFF"/>
  <style name="VirtualMethod" foreground="#03AEFF" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#EFEBEF"/>
  <style name="Local" foreground="#DFDBDF"/>
  <style name="Global" foreground="#DFDBDF"/>
  <style name="Static" foreground="#DFDBDF"/>
  <style name="JsScopeVar" foreground="#DFDBDF" italic="true"/>
  <style name="JsImportVar" foreground="#DFDBDF" italic="true"/>
  <style name="JsGlobalVar" foreground="#DFDBDF" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#242424"/>

  <!-- comments -->
  <style name="Comment" foreground="#61507A"/>
  <style name="DisabledCode" foreground="#61507A"/>
  <style name="Doxygen.Comment" foreground="#61507A"/>
  <style name="Doxygen.Tag" foreground="#61507A"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#EA5CE2"/>
  <style name="Binding" foreground="#B53B50"/>
  <style name="QmlExternalId" foreground="#03AEFF" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#03AEFF" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#EA5CE2"/>
  <style name="DiffLocation" foreground="#03AEFF"/>
  <style name="AddedLine" foreground="#06EA61"/>
  <style name="RemovedLine" foreground="#DAE84D"/>
  <style name="LogChangeLine" foreground="#B53B50"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#EA5CE2"/>
  <style name="DiffContextLine" foreground="#03AEFF"/>
  <style name="DiffSourceLine" foreground="#06EA61"/>
  <style name="DiffSourceChar" foreground="#DAE84D" background="#141414"/>
  <style name="DiffDestLine" foreground="#06EA61"/>
  <style name="DiffDestChar" foreground="#DAE84D" background="#141414"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#B53B50" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#B53B50" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#DAE84D" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#DAE84D" underlineStyle="DotLine"/>
</style-scheme>
